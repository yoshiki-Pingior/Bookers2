<%= render 'users/list', user: @user %>
<%= render 'books/list', book: @book %>


<% @books.each do |book| %>
<div>

  <p> <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></p>

  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>

  <p>Opinion：<%= book.body %></p>

</div>
<% end %>