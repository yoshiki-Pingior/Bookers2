<h2>User info</h2>
 <div class="profile-container">
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    
      <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block edit_user_path', method: :get do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
   
  </div>
</div>